      <thead class="bg-gray-100">
        <tr>
          <th class="border border-gray-300 px-4 py-2 text-gray-700">Tamanho</th>
          <th class="border border-gray-300 px-4 py-2 text-gray-700">Altura (cm)</th>
          <th class="border border-gray-300 px-4 py-2 text-gray-700">Largura (cm)</th>
          <th class="border border-gray-300 px-4 py-2 text-gray-700">Manga (cm)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="border border-gray-300 px-4 py-2">PP</td>
          <td class="border border-gray-300 px-4 py-2">74</td>
          <td class="border border-gray-300 px-4 py-2">45</td>
          <td class="border border-gray-300 px-4 py-2">14</td>
        </tr>
        
        <tr>
          <td class="border border-gray-300 px-4 py-2">P</td>
          <td class="border border-gray-300 px-4 py-2">76</td>
