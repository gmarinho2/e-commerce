    </table>
  </div>

  <!-- Provador Virtual -->
  <div id="virtualFitting" class="mt-8 mx-auto max-w-3xl bg-white rounded-xl p-6 shadow-lg">
    <h2 class="text-2xl font-bold mb-4 text-center">Provador Virtual</h2>
    <div class="space-y-6">
      <!-- Tórax -->
      <div>
        <label for="chest" class="block text-sm font-medium text-gray-700">Tórax</label>
        <input
          id="chest"
          type="range"
          min="1"
          max="5"
          value="3"
          class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
        />
      </div>

      <!-- Cintura -->
      <div>
        <label for="waist" class="block text-sm font-medium text-gray-700">Cintura</label>
        <input
          id="waist"
          type="range"
          min="1"
          max="5"
          value="3"
          class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
        />
        <p class="text-sm text-center mt-1">Ajuste: <span id="waistValue">3</span></p>
      </div>

      <!-- Quadril -->
      <div>
        <label for="hip" class="block text-sm font-medium text-gray-700">Quadril</label>
        <input
          id="hip"
          type="range"
          min="1"
          max="5"
          value="3"
          class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
        />
        <p class="text-sm text-center mt-1">Ajuste: <span id="hipValue">3</span></p>
      </div>
    </div>

    <div class="mt-8">
      <p class="text-lg font-bold">Tamanho Recomendado: <span id="recommendedSize" class="text-primary-600">M</span></p>
    </div>
  </div>

  <script src="../resources/js/provador.js" defer></script>

